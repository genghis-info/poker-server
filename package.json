{
  "name": "poker-server",
  "version": "1.0.0",
  "description": "Server for Scrum Poker",
  "repository": "IFS49F/poker-server",
  "main": "index.js",
  "scripts": {
    "start": "nodemon index.js",
    "test": "mocha --recursive ./tests",
    "build-submodule": "echo 'Building submodule web...' && cd web && yarn install && NODE_OPTIONS=--openssl-legacy-provider yarn run build",
    "build": "yarn run build-submodule && echo 'Building main project...' && cp -r web/build public && docker build ./ -t poker4fun"
  },
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "poker"
  ],
  "author": "Zoro Jiang <houritsunohikari@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "express": "^4.15.3",
    "ioredis": "^3.1.1",
    "socket.io": "^2.0.3"
  },
  "devDependencies": {
    "chai": "^4.1.1",
    "mocha": "^3.5.0",
    "nodemon": "^1.11.0",
    "proxyquire": "^1.8.0",
    "shipit-deploy": "^2.5.1"
  }
}
